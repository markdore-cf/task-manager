openapi: 3.0.3
info:
  title: Task Manager API
  version: 1.0.0
  description: REST API for managing tasks.
servers:
  - url: http://localhost:8080
paths:
  /api/tasks:
    get:
      summary: Get all tasks
      responses:
        '200':
          description: List of all tasks
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Task'
    post:
      summary: Create a new task
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Task'
      responses:
        '201':
          description: Task created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Task'
  /api/tasks/top:
    get:
      summary: Get top N tasks
      parameters:
        - in: query
          name: n
          schema:
            type: integer
            default: 5
          description: Number of top tasks to return
      responses:
        '200':
          description: List of top N tasks
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Task'
  /api/tasks/{id}:
    delete:
      summary: Mark a task as done (soft delete)
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: integer
      responses:
        '204':
          description: Task marked as done
        '404':
          description: Task not found
components:
  schemas:
    Task:
      type: object
      properties:
        id:
          type: integer
          example: 1
        title:
          type: string
          example: Buy groceries